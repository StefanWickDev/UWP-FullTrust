<Window x:Class="FullTrust.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FullTrust"
        mc:Ignorable="d"
        Title="Desktop Process (WPF)" Height="300" Width="500">
    <Grid Margin="12">
        <TextBlock Text="Scenario 2 - Send Request to UWP" FontSize="20"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
            <TextBox x:Name="tb1" Width="100" VerticalAlignment="Center" TextChanged="tb_TextChanged"/>
            <TextBlock FontSize="20" Text=" + " VerticalAlignment="Center"/>
            <TextBox x:Name="tb2" Width="100" VerticalAlignment="Center" TextChanged="tb_TextChanged"/>
            <Button x:Name="btnCalc" Margin="3" FontSize="20" IsEnabled="False" Content=" = " VerticalAlignment="Center" Click="Button_Click"/>
            <TextBlock x:Name="tbResult" VerticalAlignment="Center" FontSize="24"/>
        </StackPanel>
    </Grid>
</Window>
